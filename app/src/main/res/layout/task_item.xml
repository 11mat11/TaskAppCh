<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="4dp"
    android:backgroundTint="#f7edf8"
    android:clipToOutline="true"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_background">

    <!-- Przełącznik po lewej stronie -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/taskSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:checked="false"
        style="@style/CustomSwitch" />

    <!-- Tytuł i termin zadania wyśrodkowane -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/taskSwitch"
        android:layout_toStartOf="@id/deleteButton"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tytuł zadania"
            android:textSize="16sp"
            android:textColor="#333"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/taskDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:55 3.11.2024"
            android:textSize="14sp"
            android:textColor="#6e6e6e"
            android:gravity="center"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Przycisk usuwania z ikoną "X" otoczoną kołem -->
    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_close_24"
        android:background="@drawable/circle_background"
        android:contentDescription="Usuń zadanie"
        android:tint="#56474e"
        android:padding="8dp" />
</RelativeLayout>
